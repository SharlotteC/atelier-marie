{% endblock stylesheets %}

{% block body %}
<div class="home_content">
    <div id="basicTimeline">
        <div class="square el">
            <div class="home-container">
                <div class="first el">
                    <div class="logo-home">
                        <img src="{{ asset('images/logo-atelier.png') }}" alt="logo atelier">
                    </div>
                </div>
                <div class="second el">
                    <p> Retouche Couture | Cuir | Fourrures à EPINAL</p>
                </div>
